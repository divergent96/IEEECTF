#include<stdio.h>
#include<string.h>

void extkey(char [],int);
void lowerstr(char[]);

main(){
    int i,n;
    char instr[100],keystr[100];
    
    printf("\nThe plaintext : ");
    scanf(" %s",instr);
    printf("\nThe key : ");
    scanf(" %s",keystr);
    
    n=strlen(instr);
    
    lowerstr(instr);
    lowerstr(keystr);
    extkey(keystr,n);
    
    for(i=0;i<n;i++)
        instr[i]=instr[i]+keystr[i]-97;
    
    printf("\nCiphertext : %s\n",instr);
}

void extkey(char str[],int num){
    int len=strlen(str),i;
    char temp[100];
    
    for(i=0;i<num;i++)
        temp[i]=str[i%len];
        
    strcpy(str,temp);
}

void lowerstr(char str[]){
    int i;
    
    for(i=0;i<strlen(str);i++)
      str[i]=tolower(str[i]);
}
